<%= form_with model: @stamp, url:album_stamps_path(@album, @stamp), method: :post, local: true do |f|%>
  <div class="img-upload">
    <%= image_tag @stamp.image if @stamp.image.present? %>
    <div class="click-upload">
      <p>
        クリックしてファイルをアップロード
      </p>
      <%= f.file_field :image, id:"item-image" %>
      <div id="image-list"></div>
    </div>
  </div>

  <div class="field">
    <%= f.label :name, "神社名" %><br />
    <%= f.text_area :name, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :visit_day, "参拝日" %><br />
    <%= f.text_area :visit_day, class: :form__text %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn %>
  </div>
<% end %>